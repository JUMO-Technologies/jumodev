<?xml version="1.0"?>
<odoo>
    <data>
        <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.jumo</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='companies']" position="after">
                <div id="jumo">
                    <h2>Jumo Settings</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <label for="jumo_ringover_token" class="o_light_label"/>
                                <field name="jumo_ringover_token"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="jumo_ringover_endpoint" class="o_light_label"/>
                                <field name="jumo_ringover_endpoint"/>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
    </data>
</odoo>